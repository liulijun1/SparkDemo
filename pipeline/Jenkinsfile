#!/usr/bin/env groovy

pipeline {
    agent any

    environment {
        flavor='test'
    }

    stages {
        stage('get environment') {
            steps {
                sh 'printenv'
            }
        }

        stage('Build') {
            steps {
                sh 'pwd'
                sh './gradlew clean jar'
                archiveArtifacts '**/build/libs/*.jar'
            }
        }

        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}